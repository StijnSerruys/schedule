<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		app:srcCompat="@mipmap/ic_launcher"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_marginEnd="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp"
		android:id="@+id/list_imgType"
		android:contentDescription="@string/app_name" />

	<TextView
		android:text="@string/app_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/list_txtName"
		android:textStyle="bold"
		android:layout_alignTop="@+id/list_imgType"
		android:layout_toRightOf="@+id/list_imgType"
		android:layout_toEndOf="@+id/list_imgType" />

	<TextView
		android:text="@string/app_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/list_txtName"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:id="@+id/list_txtLocation" />

	<TextView
		android:text="@string/app_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/list_txtTeachers"
		android:textStyle="italic"
		android:maxLength="65"
		android:layout_below="@+id/list_txtName"
		android:layout_toRightOf="@+id/list_imgType"
		android:layout_toEndOf="@+id/list_imgType" />

</RelativeLayout>